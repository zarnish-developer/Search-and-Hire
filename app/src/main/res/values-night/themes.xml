<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dark" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorBlack</item>
        <!-- Customize your theme here. -->
        <item name="actionOverflowButtonStyle">@style/iconOverflow</item>
    </style>
    <style name="ThemeOverlay.MyPopupTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="backgroundColor">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/colorWhite</item>

    </style>
    <style name="Theme.Splash_activity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Splash_activity.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Splash_activity.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="iconOverflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@android:color/white</item>
    </style>
</resources>