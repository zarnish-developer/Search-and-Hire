<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/sheet"
    android:outlineSpotShadowColor="@color/transparent"
    android:outlineAmbientShadowColor="@color/colorWhite"
    android:background="@drawable/button_background"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_capslock_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"

            android:foregroundGravity="center"
            android:foreground="@drawable/ripple_effect"
            android:layout_gravity="center"
            android:id="@+id/enable_dark_mode"
            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/enable_dark_mode1"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_dark_mode_24"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Dark Mode"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/enableDarkMode"
                    ></TextView>


        </LinearLayout>

        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:foreground="@drawable/ripple_effect"
            android:orientation="vertical"
            android:id="@+id/reset_password_user_account"
            android:layout_marginLeft="90dp"
           >

            <ImageView
                android:id="@+id/reset_password_user_account1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/password_reset_bottom_menu_sheet" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorBlack"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="14sp"

                ></TextView>



        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"

        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="10dp"
            android:foreground="@drawable/ripple_effect"
            android:id="@+id/delete_user_account"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/delete_user_account1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:padding="10dp"

                android:src="@drawable/delete_bottom_sheet_menu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete Account"


                    android:textColor="@color/colorBlack"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="14sp"
                 ></TextView>


        </LinearLayout>

        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:foreground="@drawable/ripple_effect"

            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/verify_user_account"
            android:layout_marginLeft="90dp">

            <ImageView
                android:id="@+id/verify_user_account1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/verify_bottom_sheet_menu" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Verify Account"
                    android:textStyle="bold"
                    android:textSize="14sp"

                    android:textColor="@color/colorBlack"></TextView>



        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="120dp"
            android:foreground="@drawable/ripple_effect"

            android:layout_gravity="center"

            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/privacyPolicy"
            android:padding="10dp">

            <ImageView
                android:id="@+id/privacyPolicy1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_policy_24" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Privacy policy"

                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"></TextView>


        </LinearLayout>

        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:foreground="@drawable/ripple_effect"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/logout_user_account"
            android:padding="10dp">

            <ImageView
                android:id="@+id/logout_user_account1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/logout_bottom_sheet_menu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="LogOut"

                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"></TextView>

        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:foreground="@drawable/ripple_effect"

            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:id="@+id/how_we_work"

            android:orientation="vertical">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/how_we_work1"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_live_tv_24"
                android:background="@android:color/transparent"
                android:layout_gravity="center_horizontal"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How we work"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textSize="14sp"

                 ></TextView>


        </LinearLayout>

        <LinearLayout

            android:layout_width="100dp"
            android:id="@+id/contactUs"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:foreground="@drawable/ripple_effect"
           android:layout_marginLeft="90dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/contact_us_user_account1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_contact_support_24" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Contact Us"

                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:textStyle="bold"></TextView>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>